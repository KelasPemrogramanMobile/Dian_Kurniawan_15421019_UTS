<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dhyanlabs.prj_uts_diankurniawan1542019.hasil">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nilai Mahasiswa"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="30dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:id="@+id/edtxnma"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Npm"
            android:textSize="30dp"
            android:layout_below="@+id/txnma"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/edtxnpm"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai Akhir"
            android:textSize="30dp"
            android:layout_below="@+id/txnma"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/edtxna"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grade"
            android:textSize="30dp"
            android:layout_below="@+id/txnma"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/edtxgrade"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keterengan"
            android:textSize="30dp"
            android:layout_below="@+id/txnma"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/edtxket"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:id="@+id/kembali"
            android:layout_marginTop="40dp"/>



    </LinearLayout>


</RelativeLayout>
